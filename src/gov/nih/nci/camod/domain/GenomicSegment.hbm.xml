<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<subclass name="GenomicSegment" 
    	extends="EngineeredGene"
    	discriminator-value="GS"
        lazy="true">
	    
	    <!-- locationOfIntegration -->
        <property name="locationOfIntegration" 
        	column="location_of_integration" 
        	type="string"/>
        	
        <!-- segmentSize -->
        <property name="segmentSize" 
        	column="segment_size" 
        	type="string"/>	
        	
        <!-- cloneDesignator -->
        <property name="cloneDesignator" 
        	column="clone_designator" 
        	type="string"/>    	
        
        <!-- segmentTypeCollection (one-to-many unidirectional) -->
        <bag name="segmentTypeCollection" 
        	table="gen_seg_segment_type"
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="engineered_gene_id"/>
        	<many-to-many column="segment_type_id"
            	unique="true"
            	class="SegmentType"/>
        </bag>
	</subclass>
</hibernate-mapping>