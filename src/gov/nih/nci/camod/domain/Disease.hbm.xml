<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Disease" 
    	table="disease"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="disease_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>
	    
	    <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>
        	
        <!-- conceptCode -->
        <property name="conceptCode" 
        	column="concept_code" 
        	type="string"/>
        	
        <!-- histopathologyCollection (many-to-many bidirectional) -->
        <!-- Note: this collection will NOT be used to synchronize state with the database. -->
        <!-- Changes made to diseaseCollection in Histopathology will be synchronized with the database. -->
        <bag name="histopathologyCollection"
        	table="histopathology_disease"
        	inverse="true" 
        	lazy="true"
        	cascade="all-delete-orphan">
        	
        	<key column="disease_id"/>
        	<many-to-many class="Histopathology" 
        		column="histopathology_id"/>
        </bag> 
	</class>
</hibernate-mapping>