    Description: Hibernate mapping file for SpontaneousMutation
-->

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="SpontaneousMutation" 
    	table="spontaneous_mutation"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="spontaneous_mutation_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	    
	    
	    <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>
        	
        <!-- comments -->
        <property name="comments" 
        	column="comments" 
        	type="string"/>	
        	
        <!-- geneticAlterationCollection (one-to-many unidirectional) -->
        <bag name="geneticAlterationCollection" 
        	table="spon_mut_gen_alteration"
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="spontaneous_mutation_id"/>
        	<many-to-many column="genetic_alteration_id"
            	unique="true"
            	class="GeneticAlteration"/>
        </bag>
        
        <!-- mutationIdentifier: this is really a one-to-one relationship with unique=true -->
        <!-- (one-to-one unidirectional) -->
        <many-to-one name="mutationIdentifier"
        	class="MutationIdentifier"
        	column="mutation_identifier_id"
        	cascade="all"
        	unique="true"/>        
	</class>
</hibernate-mapping>